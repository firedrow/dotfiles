# Directory and file information
alias ls='ls --color=auto'
alias ll='ls -ahl --color=auto'
alias stow='stow -d ~/.dotfiles'

# Navigation
alias ..='cd ..'
alias ...='cd ../..'

# Python
alias python=/usr/bin/python3
alias pip='python -m pip'

# Remote Servers
alias ssh_do='ssh drowland@rowland.pw -i ~/.ssh/digitalocean_rsa'
alias ssh_home='ssh drowland@home.rowland.pw -p 2200 -i ~/.ssh/home_rsa'
